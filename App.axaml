<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Weather.Dashboard.Avalonia.Converters"
             x:Class="Weather.Dashboard.Avalonia.App"
             RequestedThemeVariant="Default">
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/AdvancedStyles.axaml"/>
        <StyleInclude Source="/Styles/Colors.axaml"/>
        <StyleInclude Source="/Styles/WeatherIcons.axaml"/>
        <StyleInclude Source="/Styles/CommonStyles.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- Weather Converters -->
                    <conv:WeatherConditionToColorConverter x:Key="ConditionToColor"/>
                    <conv:WeatherConditionToIconConverter x:Key="ConditionToIcon"/>
                    <conv:TemperatureToStringConverter x:Key="TempToString"/>
                    
                    <!-- Temperature Stats Converters -->
                    <conv:MinTempConverter x:Key="MinTempConverter"/>
                    <conv:MaxTempConverter x:Key="MaxTempConverter"/>
                    <conv:AvgTempConverter x:Key="AvgTempConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Spacing -->
            <x:Double x:Key="SpacingXs">4</x:Double>
            <x:Double x:Key="SpacingSm">8</x:Double>
            <x:Double x:Key="SpacingMd">16</x:Double>
            <x:Double x:Key="SpacingLg">24</x:Double>
            <x:Double x:Key="SpacingXl">32</x:Double>
            
            <!-- Border Radius -->
            <CornerRadius x:Key="RadiusXs">4</CornerRadius>
            <CornerRadius x:Key="RadiusSm">8</CornerRadius>
            <CornerRadius x:Key="RadiusMd">12</CornerRadius>
            <CornerRadius x:Key="RadiusLg">16</CornerRadius>
            <CornerRadius x:Key="RadiusXl">20</CornerRadius>
            <CornerRadius x:Key="Radius2Xl">24</CornerRadius>
            
            <!-- Typography -->
            <x:Double x:Key="DisplayLarge">57</x:Double>
            <x:Double x:Key="HeadlineLarge">32</x:Double>
            <x:Double x:Key="TitleLarge">22</x:Double>
            <x:Double x:Key="BodyLarge">16</x:Double>
            <x:Double x:Key="LabelLarge">14</x:Double>
            <x:Double x:Key="LabelMedium">12</x:Double>
            <x:Double x:Key="BodyMedium">14</x:Double>
            <x:Double x:Key="LabelSmall">11</x:Double>
            <x:Double x:Key="HeadlineSmall">24</x:Double>
            <x:Double x:Key="TitleMedium">16</x:Double>
            
            <!-- Default Theme Colors (Light) -->
            <Thickness x:Key="PaddingLg">24</Thickness>
            <Thickness x:Key="MarginMd">16</Thickness>
            
            <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
            <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#DBEAFE"/>
            <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#1E3A8A"/>
            
            <SolidColorBrush x:Key="SecondaryBrush" Color="#7C3AED"/>
            <SolidColorBrush x:Key="OnSecondaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#EDE9FE"/>
            
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#0F172A"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F8FAFC"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#64748B"/>
            
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F1F5F9"/>
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#0F172A"/>
            
            <SolidColorBrush x:Key="OutlineBrush" Color="#E2E8F0"/>
            <SolidColorBrush x:Key="OutlineVariantBrush" Color="#CBD5E1"/>
            
            <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
            
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0F172A"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>